<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Name="Firefox Token Signing Plugin Mass" UpgradeCode="646EA066-0D4A-4E29-BC26-0202CAB25D37"
      Id="*" Language="1033" Version="$(var.VERSION)" Codepage="1251" Manufacturer="NORTAL">
    <Package Keywords="Installer" Platform="$(var.Platform)" InstallerVersion="405" Compressed="yes"/>
    <MediaTemplate EmbedCab="yes" CompressionLevel="high"/>
    <Icon Id="Icon.ico" SourceFile="$(var.SolutionDir)media/ID.ico"/>
    <Property Id="ARPPRODUCTICON" Value="Icon.ico"/>
    <MajorUpgrade AllowSameVersionUpgrades="yes" DowngradeErrorMessage=
      "A newer version of [ProductName] is already installed. If you are trying to downgrade, please uninstall the newer version first."/>
    <Condition Message="[ProductName] requires Windows 7 or higher.">
      <![CDATA[Installed OR (VersionNT >= 601)]]>
    </Condition>
    <UIRef Id="WixUI_Minimal" />

    <Directory Id="TARGETDIR" Name="SourceDir">
		<Directory Id='ProgramFilesFolder'>
			<Directory Id="APPLICATIONFOLDER" Name="Firefox Token Signing Plugin Mass">
				<Component Id="Application" Guid="1557B20B-874D-41FF-BC2A-CB52AACB2937">
					<File Source="C:\OpenSSL-Win32\bin\libeay32.dll"/>
					<File Source="$(var.SolutionDir)Release\npesteid-firefox-plugin.dll"/>
					<RegistryValue Root='HKLM' Type='string' Value='[APPLICATIONFOLDER]npesteid-firefox-plugin.dll'
						Key='Software\MozillaPlugins\@NORTAL/esteid-firefox-plugin-mass' Name="Path" Action="write"/>
				</Component>
			</Directory>
		</Directory>
		
		<!-- 64bit -->
		<?if $(var.Platform) = "x64" ?>
		<Directory Id='ProgramFiles64Folder'>
			<Directory Id="APPLICATION64FOLDER" Name="Firefox Token Signing Plugin Mass">		
				<Component Id="Application64" Guid="{C3773B13-1E17-4BD8-9FE4-DC6367B0D51C}" Win64="yes">	
					<File Source="C:\OpenSSL-Win64\bin\libeay32.dll" Id="libeay32_x64.dll"/>				
					<File Source="$(var.SolutionDir)x64\Release\npesteid-firefox-plugin.dll" Id="npesteid_firefox_plugin64.dll" KeyPath="yes" Name="npesteid-firefox-plugin64.dll"/>	
					<RegistryValue Root="HKLM" Key="Software\MozillaPlugins\@NORTAL/esteid-firefox-plugin-mass" Name="Path"
                       Value="[APPLICATION64FOLDER]npesteid-firefox-plugin64.dll" Type="string" Action="write"/>					
				</Component>
			</Directory>
		</Directory>
		<?endif ?>
		
    </Directory>

    <Feature Id="Install" Level="1" Title="Firefox Token Signing Plugin Mass" Display="expand" ConfigurableDirectory="APPLICATIONFOLDER">
		<ComponentRef Id="Application"/>
		<?if $(var.Platform) = "x64" ?>
			<ComponentRef Id="Application64"/>
		<?endif ?>
    </Feature>
  </Product>
</Wix>
